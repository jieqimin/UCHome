@model UCHome.Model.UserInfo
@using UCHome.Controllers;
@{
    // HttpCookie httpCookie = Request.Cookies["ThemeSkin"];
    HomeController home = new HomeController();
}
@if (home.ThemeSkin != null)
{
    <link href="@Url.Content("~/Content/css/theme/" + home.ThemeSkin + ".css")" rel="stylesheet" />
}
else
{
    <link href="@Url.Content("~/Content/css/theme/skin1.css")" rel="stylesheet" />
}
<ul class="portal">
    <li class="logo">泰安市教育云空间</li>
    <li><span class="glyphicon glyphicon-home"></span><a href="@Url.Action("Index", "Home")">返回我的主页</a></li>

</ul>
<ul class="login">
    <li><span class="glyphicon glyphicon-arrow-up"></span><a href="#top">返回顶部</a></li>
    <li><span class="glyphicon glyphicon-log-out"></span><a href="@Url.Action("Logout", "AppCenter", new { returnurl = Request.Url })">【退出】</a></li>
</ul>



