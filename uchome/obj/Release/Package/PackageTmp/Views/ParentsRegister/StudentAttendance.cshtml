    <link href="@Url.Content("~/Content/css/mui.picker.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/js/mui.min.js")"></script>
    <script src="@Url.Content("~/Content/js/mui.picker.min.js")"></script>
