@model Guid
<script  src="@Url.Content("~/scripts/mycustomtip.js")"></script>
<style>
    .saylists {
        padding-top: 1px;
        padding-bottom: 1px;
        background-color: #fff;
        min-height: 500px;
    }

    .say-content {
        margin: 10px 10px;
        padding: 5px;
        border: solid 1px #add8e6;
    }

        .say-content .say-content-title {
            line-height: 40px;
        }

    .say-content-title h5 {
        line-height: 40px;
        color: #2595b7;
    }

    .say-content .say-content-body {
        color: #666;
        font-size: 14px;
        line-height: 25px;
    }

    .say-content .say-content-other {
        height: 40px;
        line-height: 40px;
        color: #999;
        font-size: 12px;
    }

    .say-content-other .sayproperty {
        float: left;
    }

    .say a {
        text-decoration: none;
        cursor: pointer;
    }

