@{
    ViewBag.Title = "MaintenanceStatistics";
}
@model List<UCHome.Controllers.DataStatisticsController.RepairInfo>
    <link rel="stylesheet" href="@Url.Content("~/plugs/datatables/css/jquery.dataTables.css")">
    <link rel="stylesheet" href="@Url.Content("~/plugs/datatables/css/dataTables.bootstrap.css")">
    <script src="@Url.Content("~/plugs/datatables/js/jquery.datatables.js")"></script>
    <script src="@Url.Content("~/plugs/datatables/js/dataTables.bootstrap.js")"></script>
    <style type="text/css">
        td {
            text-align: center;
            margin: 0px auto;
        }
    </style>
    @using (Ajax.BeginForm(
    new AjaxOptions()
    {
        HttpMethod = "post",
        Url = Url.Action("MaintenanceStatistics"),
        UpdateTargetId = "#maintenanceStatistics",
        LoadingElementId = "loding",
        LoadingElementDuration = 2000
    }))
    {
        <div id="maintenanceStatistics" class="form-position pagew">
            <table class="table table-striped table-bordered table-hover datatable" id="mainPerStaTable" style="width: 700px;">
                <thead>
                    <tr>
                        <td width="100px" rowspan="2" colspan="1"></td>
                        <td width="100px" rowspan="2" colspan="1" style="line-height: 90px;">姓名</td>
                        <td width="250px" colspan="4">后勤报修</td>
                        <td width="250px" colspan="4">电教报修</td>
                    </tr>
                    <tr>
                        <td width="60px">教室>投影及相关设备</td>
                        <td width="50px">监控等</td>
                        <td width="50px">教室>软件</td>
                        <td width="50px">教室>计算机</td>
                        <td width="60px">门窗设施</td>
                        <td width="50px">门窗</td>
                        <td width="50px">供水设备</td>
                        <td width="50px">供水设备</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                       int i = 0;
                    }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.repairPerson</td>
                            <td>@item.jstyCount</td>
                            <td>@item.jkqCount</td>
                            <td>@item.jsrjCount</td>
                            <td>@item.jsjsjCount</td>
                            <td>@item.mcssCount</td>
                            <td>@item.mcCount</td>
                            <td>@item.gssbCount</td>
                            <td>@item.gnsbCount</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
