@{
    ViewBag.Title = "文章详细";
}
@using UCHome.Model
@model UCHome.Model.NewSchoolMessage
<link href="@Url.Content("~/Content/NewFile/css/reset.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/NewFile/css/public.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/NewFile/css/district.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/NewFile/css/bootstrap.css")" rel="stylesheet" />
<script src="@Url.Content("~/Content/NewFile/js/slider.js")"></script>
<script src="@Url.Content("~/Content/NewFile/js/district.js")"></script>
<script src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.template.pager.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.pager.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
<style>
    .part {
        width: 100%;
        height: 450px;
        background: #f5f8fc;
        border: 1px solid #c8dcf2;
        padding-top: 5px;
    }

        .part li {
            text-align: left;
            padding-left: 15px;
            height: 35px;
        }

    #Part1 {
        width: 100%;
        border: 1px solid #c8dcf2;
        margin-top: 30px;
    }

    #content {
        word-wrap: break-word;
    }

        #content table {
            display: table;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

            #content table td, .logcontent table th {
                border: solid 1px #ddd;
                padding: 5px 10px;
            }
</style>
<body>
    <div class="header">
        @Html.Partial("HeadMenu", UCHomeBasePage.IsLogin)
    </div>
    <div class="container">
        <div class="content">
            <!--title-->
            <div class="title">
                <img src="@Url.Content("~/Content/NewFile/image/public/logo.png")">
                <span>&nbsp;&nbsp;泰安市“教育云”空间</span>
            </div>
            <!--silder-->
            <div class="slider">
                <div class="slider-container">
                    <div class="slider-wrapper">
                        <div class="slide">
                            <a target="_blank" href="http://www.taedu.gov.cn/cloud/">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner1.jpg")" />
                            </a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://jx.taedu.gov.cn:83/Resource.Portal.Web">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner2.jpg")" />
                            </a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://www.taedu.gov.cn/UCHomeNew/">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner3.jpg")" />
                            </a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://jx.taedu.gov.cn:83/Resource.Portal.Web">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner4.jpg")" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!--第一模块-->
            <div id="Part1">
                <p style="font-size: 16px; color: #47c6a9; font-weight: bold; line-height: 35px; text-align: center;">@Model.MsgTitle</p>
                <p style="font-family: 微软雅黑; text-align: center;">发布日期：@Model.MsgDate.ToString("yyyy-MM-dd")   &nbsp;&nbsp;| &nbsp;&nbsp;发布人：@Model.MsgSendUserName&nbsp;&nbsp;| &nbsp;&nbsp; </p>
                <div id="content" style="padding: 20px 10px 20px 10px; min-height: 300px; width: 100%">
                  内容：  @Html.Raw(Model.MsgContent)
                </div>
                <div>
                  附件：
 		<div class="">
                         @{

                             var arry = Model.FileID;
                             var arryfile = Model.FileUrl;
                             if (!string.IsNullOrEmpty(arry))
                             {
                                 string[] array1 = arry.Split(',');
                                 string[] array2 = arryfile.Split(',');
                                 for (int i = 0; i < array1.Length; i++)
                                 {


                                  <a href="@Url.Content("~/ashx/DownLoadFile.ashx")?FileUrl=@array2[i]">【@array1[i]】</a><br />


                                 }
                             }
                             else
                             {

                             }

                         }
                     </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="footer_content">
            版权信息：CopyRight©2010-2015
        </div>
    </div>
</body>
