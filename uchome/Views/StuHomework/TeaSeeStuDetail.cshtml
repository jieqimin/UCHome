@{
    Layout = null;
}
@model HomeWork.Model.Vw_Homework_StuHomeworks_Search
<style type="text/css">
    .pd {
        padding-left: 0px;
        padding-right: 0px;
    }

    .h {
        height: 34px;
        line-height: 34px;
    }

    .lic {
        float: left;
        margin-right: 10px;
        height: 33px;
        line-height: 33px;
    }

    .w {
        width: 450px;
    }
</style>

<div id="noticeSend" class="form-horizontal form-position pagew " style="margin-bottom: 0px; margin-top: 0px;">
    <div class="form-group">
        <label for="Time" class="col-sm-2 control-label">作业名称：</label>
        <div class="col-sm-9 pd h">
           @Model.StuHwName
        </div>
    </div>
    <div class="form-group">
        <label for="Memo" class="col-sm-2 control-label">作业描述：</label>
        <div class="col-sm-9 pd h">
           @Model.HwContent
        </div>
    </div>
    <div class="form-group">
        <label for="Reason" class="col-sm-2 control-label">开始日期：</label>
        <div class="col-sm-9 pd h">
            @Model.SubmitDate
        </div>
    </div>
   <div class="form-group">
       <label for="Status" class="col-sm-2 control-label">作业附件：</label>
       @if (!string.IsNullOrWhiteSpace(Model.HwAttachment))
       {
           <div class="col-sm-9 pd h">
               <a href="@Url.Content(Model.HwAttachment)">@ViewBag.Attachment</a>
           </div>
       }
       else
       {
           <div class="col-sm-9 pd h">
               未上传附件
           </div> 
       }
       
    </div>
</div>
