
@{
    ViewBag.Title = "任务管理";
    Layout = "~/Views/Shared/_LayoutSys.cshtml";
}
@section Head{}
    <script src="@Url.Content("~/plugs/usercontrol/jquery-ui-1.10.0.custom.min.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/plugs/usercontrol/jquery-ui-1.10.0.custom.css")">
    <script src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.js")"></script>
    <script src="@Url.Content("~/scripts/guid.js")"></script>
<div id="body_content" class="panel panel-default">
    <div class="panel-heading">
        <ul id="taskman-nav" class="nav nav-pills">
            <li role="presentation" class="active"><a href="#" id="task-list">任务列表</a></li>
            <li role="presentation"><a href="#" id="task-add">添加任务</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="showapp">
        </div>
    </div>
    <script>
        $(function () {
            $(".showapp").load("@Url.Action("TaskManage")")
            $("#task-list").click(function () {
                $(".showapp").load("@Url.Action("TaskManage")")
            });
            $("#task-add").click(function () {
                $(".showapp").load("@Url.Action("AddTask")")
            });
        })
    </script>
</div>


