@using UCHome.Model
@{    
    ViewBag.Title = "教师个人空间";   
}
@model UCHome_BaseInfo
@{
    if (Model == null)
    {
    @Html.Raw("<div class='modal-backdrop fade in center-block' style='opacity:1'><div class='modal-dialog modal-sm show'><div class='modal-content'><div class='modal-body text-center'>检测到帐号访问异常，请联系管理员！</div></div></div></div>")
        return;
    }
    string sec = Model.Section != null ? Model.Section.Split(',')[0] : "全部";
    string sub = Model.Subject != null ? Model.Subject.Split(',')[0] : "全部";
}
@section Head{
    <link href="@Url.Content("~/Content/css/resource.css")" rel="stylesheet" />
    <script>
        $(function () {
            //数据绑定 BindData
            $("#PersonInfo").load("@Url.Action("PersonInfo2", "TeacherCenter", new { id = Model.UserID })");
            //End
        });
        function getselsearchwhere() {
            var research_where_content = "";
            var sec = $("#search_section").attr("name");
            if (sec.length > 0 && sec != "全部")
                research_where_content += sec + "、";
            var sub = $("#search_subject").attr("name");
            if (sub.length > 0 && sub != "全部")
                research_where_content += sub + "、";
            var version = $("#search_version").attr("name");
            if (version.length > 0 && version != "全部")
                research_where_content += version + "、";
            var gra = $("#search_grade").attr("name");
            if (gra.length > 0 && gra != "全部")
                research_where_content += gra + "、";
            var res = $("#search_restype").attr("name");
            if (res.length > 0 && res != "全部")
                research_where_content += res + "、";
            var doc = $("#search_doctype").attr("name");
            if (doc.length > 0 && doc != "全部")
                research_where_content += doc + "、";
            $("#searchBar").html(research_where_content.substring(0, research_where_content.length - 1));
        }
    </script>
}

