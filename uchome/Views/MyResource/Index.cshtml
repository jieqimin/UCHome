    });
    $("#li-myres").click(function () {
        $(".icon-ressearch").html("我的资源");
        setdefaultwhere();
        $("#resourcecenter").load("@Url.Action("MyRes", "MyResource", new { id = Model.UserID })");
    });
    function setdefaultwhere() {
        $(".res-style li").removeClass("selected");
        $(".res-style li[value='']").addClass("selected");
        $(".res-doc li").removeClass("selected");
        $(".res-doc li[value='']").addClass("selected");
    }
</script>


