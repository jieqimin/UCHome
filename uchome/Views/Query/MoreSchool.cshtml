@using UCHome.Model
@{
    ViewBag.Title = "更多学校";
    Layout = "~/Views/Shared/_MoreLayout.cshtml";
}

<script >
    $(function () {
        $("#xzqhm").val("@ViewBag.xzqhm");
        $("#schoolType").val("@ViewBag.schoolType");
    });
    var searchClick = function () {
        $("#schoolList").load("@Url.Action("PageSchool", "Query")?key=" + escape($("#txtKey").val()) + "&xzqhm=" + $("#xzqhm").val() + "&schoolType=" + $("#schoolType").val());
    }
</script>
<style>
    #contentList li {
        text-align: left;
        height: 150px;
        margin: 15px 25px 15px 25px;
        border: 1px solid #c8dcf2;
    }
</style>
    <input type="hidden" id="xzqhm" value="370901" />
    <input type="hidden" id="schoolType" value="1" />
    <input type="hidden" id="xxid" />
    <input type="hidden" id="dataType" value="4" />
    <div class="header">
        @Html.Partial("HeadMenu",UCHomeBasePage.IsLogin)
    </div>
    <div class="container">
        <div class="content">
            <!--title-->
            <div class="title">
                <img src="@Url.Content("~/Content/NewFile/image/public/logo.png")">
                <span>&nbsp;&nbsp;@ViewBag.NewTitle</span>
            </div>
            <!--silder-->
            <div class="slider">
                <div class="slider-container">
                    <div class="slider-wrapper">
                        <div class="slide">
                            <a target="_blank" href="http://www.taedu.gov.cn/cloud/"><img src="@Url.Content("~/Content/NewFile/image/school/banner1.jpg")" /></a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://jx.taedu.gov.cn:83/Resource.Portal.Web"><img src="@Url.Content("~/Content/NewFile/image/school/banner2.jpg")" /></a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://www.taedu.gov.cn/UCHomeNew/">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner3.jpg")" />
                            </a>
                        </div>
                        <div class="slide">
                            <a target="_blank" href="http://jx.taedu.gov.cn:83/Resource.Portal.Web">
                                <img src="@Url.Content("~/Content/NewFile/image/school/banner4.jpg")" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!--第一模块-->
            <div id="Part1">
                @{Html.RenderAction("Part1", "Query",new {xzqhm = ViewBag.xzqhm,schoolType= ViewBag.schoolType});}
            </div>
            <div id="Part2">
                <div style="width: 100%; float: left">
                    <div class="part4">
                        <div style="height: 35px; width: 100%; background-color: #f5f5f5">
                            <span style="color: #47c6a9; line-height: 35px; font-size: 15px; padding-left: 5px;font-weight: bold;">学校</span>
                        </div>
                        <div class="list-search" style="margin-left: 25px; margin-top: 10px;">
                            <div class="list-div">
                                <label>
                                    <input id="txtKey" type="text" class="list-input" />
                                </label>
                            </div>
                            <div id="div-search" class="input-search" style="cursor:pointer" onclick="searchClick()"></div>
                        </div>
                        <div id="schoolList"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="footer_content">
            版权信息：CopyRight©2010-2015
        </div>
    </div>
