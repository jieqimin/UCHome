}
<link rel="stylesheet" href="@Url.Content("~/plugs/datatables/css/jquery.dataTables.css")">
<link rel="stylesheet" href="@Url.Content("~/plugs/datatables/css/dataTables.bootstrap.css")">
<link rel="stylesheet" href="@Url.Content("~/plugs/scrollbar/css/sui.css")">
<script src="@Url.Content("~/plugs/datatables/js/jquery.datatables.js")"></script>
<script src="@Url.Content("~/plugs/datatables/js/dataTables.bootstrap.js")"></script>
<script src="@Url.Content("~/plugs/datatables/js/Jquery.dataTableSetting.js")"></script>
<div class="pagew form-position">
    <div class="searchbar form-inline">
        <div class="form-group">
            <label for="exampleInputName2">课程分类</label>
            <select class="form-control" id="search_coursetype">
                @foreach (var item in ViewBag.CourseType_DictCode as SelectList) {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>        
        <button type="button" id="btn-searchsicourse" class="btn btn-primary">搜索</button>
        <button type="button" class="btn btn-info" onclick="RedircetUrl('@Url.Action("SICourseCreate","SchoolInfo")')">开设新课程</button>
    </div>
    <hr class="divider" />
    
    <table class="table  table-striped table-bordered table-hover datatable" id="table_sicourse">
        <thead>
            <tr>
                <th>
                    别名
                </th>
                <th>
                    学科
                </th>
                <th>
                    分类
                </th>
                <th>
                    等级
                </th>
                <th>
                    状态
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tfoot>
            <tr><th colspan="6">共<label id="records"></label> 项，当前显示前100项记录，如未找到你想要的结果，可以将筛选条件调整更精确！</th></tr>
        </tfoot>
    </table>
</div>
<script>
    var initlisturl = "@Url.Action("GetSICourseList")";
    var operurl_delete = "@Url.Action("DeleteSICourse")";
        var operurl_edit = "@Url.Action("SICourseEdit")";
