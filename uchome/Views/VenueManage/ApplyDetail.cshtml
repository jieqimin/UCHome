@{
    Layout = null;
    //ApplyDetail
}
@using M = VenueSetup.Model;
@using (Ajax.BeginForm("ApplyDetail", null,
    new AjaxOptions()
    {
        HttpMethod = "post",
        Url = @Url.Action("ApplyDetail"),
        UpdateTargetId = "#applyDetail",
        LoadingElementId = "loding",
        LoadingElementDuration = 2000
    }, new { id = "form_ApplyDetail" }))
{
    <div id="applyDetail" class="form-horizontal form-position pagew">
        <table class="table table-hover">
            @foreach (M.ApplyMeeting item in Model)
            {
                <tr>
                    <td style="width:320px;">@item.StartTime - @item.EndTime</td>
                    <td style="width:80px;">@item.CreatorDisplayName</td>
                    @if (item.MeetingName.Length > 20)
                    {
                        item.MeetingName = item.MeetingName.Substring(0, 20) + "...";
                        <td>@item.MeetingName</td>
                    }
                    else
                    {
                        <td>@item.MeetingName</td>
                    }
                </tr>
            }
        </table>
    </div>

}