@{
    Layout = null;
}

<script src="@Url.Content("~/plugs/usercontrol/selectuser.js")"></script>

<div class="form-position pagew">
    <div class="form-inline form-group">
        <div class="form-group">
            <input type="text" class="form-control col-sm-6" id="SelMutiUsers" value="" />
        </div>
        <button type="button" class="btn btn-info selUsersForTea" id="selectuser1">
            多人选择
        </button>
        <div id="selectusername1"></div>
        <input type="text" id="SelMutiUsers" value="" />
    </div>
    <div class=" form-inline form-group">
        <div class="form-group">
            <input type="text" class="form-control col-sm-6" id="SelSingleUsers" value="" />
        </div>
        <button type="button" class="btn btn-info selOneUserForTea" id="selectuser2">
            单人选择
        </button>
        <div id="selectusername2"></div>
        <input type="text" id="SelSingleUsers" value="" />
    </div>
</div>
<script>
    var seluser1 = new SelUser({
        obj: $("#selectuser1"),
        selRole: "tea",//tea,stu,fam
        selType: "muti",//多选：muti,单选:single
        selArea: "friend,student,stuparent,colleague",//friend:我的好友,student:我的学生,stuparent:学生家长,colleague:我的同事,myclassmate:我的同学,teacher:我的老师,classmateparent:同学家长
        selValue: $("#SelMutiUsers"),
        selText: $("#selectusername1"),
        callBackfn: function (ids, names) {
            //将先中的结果进行处理
            $("#SelMutiUsers").val(ids);
            $("#selectusername1").html(names);
        }
    });
    var seluser2 = new SelUser({
        obj: $("#selectuser2"),
        selRole: "tea",//tea,stu,fam
        selType: "single",//多选：muti,单选:single
        selArea: "student",//friend:我的好友,student:我的学生,stuparent:学生家长,colleague:我的同事,myclassmate:我的同学,teacher:我的老师,classmateparent:同学家长
        selValue: $("#SelSingleUsers"),
        selText: $("#selectusername2"),
        callBackfn: function (ids, names) {
            //将先中的结果进行处理
            $("#SelSingleUsers").val(ids);
            $("#selectusername2").html(names);
        }
    });
</script>
