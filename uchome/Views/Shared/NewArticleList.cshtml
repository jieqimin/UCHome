@{
    Layout = null;
}
@model List<UCHome.Model.NewArticle>
    @foreach (var item in Model.Where(m => m.Author != "tatest"))
    {
        <li>
            <a target="_blank" href="@Url.Action("ArticleInfo","Query",new { id = item.PKID})">@item.Title</a>
            @if (@item.IsNew)
            {
                <span class="news-icon">
                    <img src="@Url.Content("~/Content/NewFile/image/public/new.png")">
                </span>
            }
            <span>@item.DeployTime.ToString("yyyy/MM/dd")</span>
        </li>
    }
