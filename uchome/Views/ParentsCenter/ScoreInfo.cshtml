@using System.Net.Mime
@using Student.Model
@using UCHome.Controllers
@{
    Layout = null;
    List<ChildrenScores> scorelist = ViewBag.ScoreInfo as List<ChildrenScores>;
}
<style>
    #kscj li {
        padding-left: 20px;
        padding-right: 20px;
    }

    #tab1content li span {
        padding: 10px;
        display: inline-block;
        float: left;
    }

    .showstyle {
        width: 120px;
        margin: 5px auto;
        height: 25px;
        line-height: 25px;
    }

        .showstyle li {
            float: left;
            font-size: 12px;
            color: #008080;
            text-align: center;
            border: solid 1px #ddd;
            cursor: pointer;
        }

            .showstyle li.selected {
                background-color: #dddddd;
            }

    #tabtable {
        width: 60px;
        line-height: 25px;
    }

    #tabcharts {
        width: 60px;
        line-height: 25px;
    }
</style>
<div class="showstyle">
    <ul>
        <li id="tabtable" class="selected">表格显示</li>
        <li id="tabcharts">图表显示</li>
    </ul>
</div>

<div id="kscj">
    @Html.Partial("ScoreTable", scorelist)
</div>
<script>
    $("#tabcharts").click(function () {
        loaddata($("#kscj"));
        $("#kscj").load("@Url.Action("ScoreCharts")");
        $(".showstyle li").removeClass("selected");
        $(this).addClass("selected");

    });
    $("#tabtable").click(function () {
        loaddata($("#kscj"));
        $("#kscj").load("@Url.Action("ScoreTable")");
        $(".showstyle li").removeClass("selected");
        $(this).addClass("selected");
    });
</script>


